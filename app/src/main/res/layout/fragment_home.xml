<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    android:backgroundTint="#EFF3F2"
    tools:context=".UI.fragment.HomeFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/locationViewpage2"
            android:layout_width="420dp"
            android:layout_height="420dp"
            android:layout_marginLeft="-80dp"
            android:layout_marginTop="-65dp"
            android:background="@drawable/circle_round"
            android:backgroundTint="#BAF6F3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="70dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/robotomedium"
                android:paddingStart="0dp"
                android:paddingTop="10dp"
                android:text="Mô hình mới"
                android:textColor="#544747"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/robotomedium"
                android:text="Aqua - Kono subarashi isekai ni shukufuku o   "
                android:textColor="#544747"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/robotomedium"
                android:paddingStart="0dp"
                android:paddingTop="10dp"
                android:text="Giá chỉ :"
                android:textColor="#544747"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/robotomedium"
                android:text="250.000 VND"
                android:textColor="#544747"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/shownow"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_bg_login"
                android:backgroundTint="#68F6FF"
                android:fontFamily="@font/robotomedium"
                android:text="xem ngay"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

        </LinearLayout>

        <ImageView
            android:layout_width="266dp"
            android:layout_height="366dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:src="@drawable/mam" />

        <TextView
            android:id="@+id/kind_pr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locationViewpage2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/robotomedium"
            android:padding="10dp"
            android:paddingStart="0dp"
            android:text="Thể loại Figure hot"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyvlerViewCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kind_pr"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:padding="10dp" />


        <TextView
            android:id="@+id/textS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyvlerViewCategories"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/robotobold"
            android:padding="10dp"
            android:paddingStart="0dp"
            android:text="Tìm kiếm Action Figure \n yêu thích của bạn"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textS"
            android:layout_marginLeft="-85dp"
            android:layout_marginTop="-45dp"
            android:layout_toRightOf="@+id/textS"
            android:src="@drawable/heart" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cate_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textS"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:padding="10dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pr_by_cate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cate_sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:padding="10dp" />

    </RelativeLayout>
</ScrollView>