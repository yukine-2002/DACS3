<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/relative"
    android:elevation="2dp"
    android:background="@drawable/button_bg_login"
    android:layout_margin="10dp"
    android:backgroundTint="@color/white"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/test" />

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img"
        android:layout_marginTop="-100dp"
        android:background="#FFFFFF"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/text_blog"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppinsmedium"
            android:maxLines="2"
            android:text="Blog anime  cộng đồng những người yêu thích anime Blog anime  cộng đồng những người yêu thích anime "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/info"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-45dp"
        android:elevation="20dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="5dp"
        android:text="Bui Ngoc Thanh \n 20-12-2021"
        android:textColor="@color/LightSlateGray"
        android:textSize="15sp"
        android:textStyle="bold" />



    <LinearLayout
        android:id="@+id/feel"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-45dp"
        android:layout_marginRight="20dp"

        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="20dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_thumb_up_24"
                />
            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:layout_marginTop="-2dp"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="20dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_thumb_down_24"

                />
            <TextView
                android:id="@+id/dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:layout_marginTop="-2dp"
                android:textColor="@color/black"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>